<Page x:Class="ristorante_frontend.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ristorante_frontend.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">BENVENUTI AL RISTORANTE!!</Label>
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">Per favore inserire mail e password</Label>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">E-mail</Label>
            <TextBox x:Name="EmailTxt" Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Width="150"/>
            <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" >Password</Label>
            <TextBox x:Name="PasswordTxt" Grid.Row="2" Grid.Column="2" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Width="150"/>
        </Grid>
        <Button Grid.Row="4" Grid.Column="0" Click="OnLoginBtnClick" HorizontalAlignment="Right" Width="80">Login</Button>
        <Button Grid.Row="4" Grid.Column="2" Click="OnRegisterBtnClick" HorizontalAlignment="Left" Width="80">Registra</Button>
    </Grid>
</Page>
